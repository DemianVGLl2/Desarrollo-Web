<%- include("partials/head"); -%>

    <div class="container">
        <div class="row">
            <h1>Hello <%= name %></h1>
        </div>
    </div>

    <% if (locals.family) { %>
    <div class="container">
        <ul>
            <% family.forEach(function(member) { %>
                <li><a href="/about/<%= member%>/detail" style="color: #000;;">Say hello to <%= member%></a></li>
            <% }) %>
        </ul>
    </div>
    <% } %>

    <div class="container"><a href="../html/destination.html">Link to destination</a></div>
    <div class="container">
      <h4>Query</h4>
      <a href="/about?name=Demian" style="color: red;">Say hello to Demian</a>
      <a href="/about?name=Blue" style="color: blue;">Say hello to Blue</a>
    </div>
    <div class="container">
      <h4>Parameters</h4>
      <a href="/about/Demian/detail" style="color: red;">Say hello to Demian</a>
      <a href="/about/Blue/detail" style="color: blue;">Say hello to Blue</a>
    </div>
    
    <div class="container">
      <form action="login" method="post">
        <label for="username">User: </label>
        <input type="text" name="username" id="username" placeholder="Introduce username"/>
        <br/>
        <label for="password">Password: </label>
        <input type="password" name="password" id="password" placeholder="Password"/>
        <br/>
        <input type="submit" value="Submit"/>
      </form>
    </div>

    <div id="carouselExample" class="carousel slide" style="max-width: 50%;">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="../images/beach1.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="../images/beach2.jpeg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="../images/beach3.jpeg" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<%- include("partials/footer"); -%>